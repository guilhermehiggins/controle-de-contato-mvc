@model Contact
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato de @Model.Name?</h3>
    <br />
    <div class="row">
        <div class="col-lg-12" style="text-align: center;">
            <a class="btn btn-primary" asp-controller="Contact" asp-action="Index" role="button">Cancelar exclusão</a>
            <a class="btn btn-danger" asp-controller="Contact" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
        </div>
    </div>
