@model Contact
@{
    ViewData["Title"] = "Editar contato";
}

<div>
    <div class="text-center">
        <h2 class="display-4">Editar contato</h2>
        <br />
    </div>

    <form asp-controller="Contact" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="name">Nome</label>
            <input id="name" type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            <label for="email">E-mail</label>
            <input id="email" type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            <label for="phone">Celular</label>
            <input id="phone" type="tel" asp-for="Phone" class="form-control" pattern="\(\d{2}\) \s*\d{5}-\d{4}" placeholder="Digite o celular do contato: (xx) xxxxx-xxxx">
        </div>

        <div class="row">
            <div class="col-lg-12" style="text-align: center;">
                <button type="submit" class="btn btn-primary justify-content-center">Alterar</button>
                <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index">Voltar</a>
                @Html.ValidationMessageFor(x => x.Phone)
            </div>
        </div>
    </form>
</div>